{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.(e2e|spec)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "coverageReporters": ["json", "text-summary", "text", "html"],
  "testEnvironment": "node",
  "fakeTimers": {
    "enableGlobally": true
  },
  "notify": true,
  "notifyMode": "always",
  "randomize": true
}
