# Application Environment
NODE_ENV=production
HOST_ENV=production
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=user
DB_PASSWORD=password
DB_NAME=database_name
# DB_CA=

# MySQL Connection Pool Settings (Optional)
# DB_CONNECTION_LIMIT=10                    # Máximo de conexões no pool

# Keep Alive Settings (Optional) - MySQL2 Supported
# DB_KEEP_ALIVE_INITIAL_DELAY=0            # Delay inicial para keep alive
# DB_ENABLE_KEEP_ALIVE=true                # Habilitar keep alive

# Timeout Settings (Optional) - TypeORM/MySQL2 Supported
# DB_IDLE_TIMEOUT=28800000                 # Timeout para conexões idle no pool (8h = 28800000ms)
# DB_CONNECT_TIMEOUT=30000                 # Timeout para estabelecer conexão (TypeORM)
# DB_ENABLE_QUERY_TIMEOUT=true             # Habilitar timeout de queries (TypeORM)

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=24h

# Sentry Configuration (Optional)
# SENTRY_DSN=https://your-sentry-dsn

# Other configurations
# LOG_LEVEL=info
# CORS_ORIGIN=http://localhost:3000